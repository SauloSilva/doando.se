#cicle_three
  #body
    %h1 Contatos
    = simple_form_for '#' do |f|
      %dl.contact_form
        %dt= f.label :name, t('form.label.name')
        %dd= f.text_field :name
        %dt= f.label :email, t('form.label.email')
        %dd= f.text_field :email
        %dt= f.label :body, t('form.label.body')
        %dd= f.text_field :body
        .actions
          = f.submit 'Enviar', :class => 'button save'
