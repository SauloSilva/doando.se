%html{:xmlns => "http://www.w3.org/1999/xhtml", :lang => "pt-br"}
  %head
    = yield :stylesheet
    = stylesheet_link_tag :admin
    = csrf_meta_tag

    %title= page_title

  %body
    #root
      #menu
        = render partial: 'shared/nav'

      #content
        = render 'shared/flash_messages'
        = yield

      #root_footer

    #footer
    = javascript_include_tag :admin

    = render 'shared/require_gmap'
    = yield :javascript