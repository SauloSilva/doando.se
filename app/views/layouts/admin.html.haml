      #menu
        = render partial: 'shared/nav'

      #content
        = render 'shared/flash_messages'
        = yield

      #root_footer

    #footer
    = javascript_include_tag :admin
    %script{ :src => "http://maps.googleapis.com/maps/api/js?key=AIzaSyAE08dkexIDR_HfbiFlSZEXfBibz6Z0_TY&sensor=false", :type => "text/javascript" }

    = yield :javascript