!!! XML
!!! 1.1
%html{:xmlns => "http://www.w3.org/1999/xhtml", :lang => "pt-br"}
  %head
    = yield :stylesheet
    = stylesheet_link_tag :admin
    = csrf_meta_tag

    %title= page_title

  %body
    #root
      = image_tag 'logo.jpg', :class => 'logo'
      #container
        #top
          = render 'shared/flash_messages'
          #menu
            = render 'layouts/nav'
        #center
          #header
          #content= yield

      #root_footer

    #footer
    = javascript_include_tag :admin
    %script{ :src => "http://maps.googleapis.com/maps/api/js?key=AIzaSyAE08dkexIDR_HfbiFlSZEXfBibz6Z0_TY&sensor=false", :type => "text/javascript" }

    = yield :javascript
