!!! XML
!!! 1.1
%html{xmlns: 'http://www.w3.org/1999/xhtml', lang: 'pt-br'}
  %head
    = yield :stylesheet
    = stylesheet_link_tag 'application'
    = csrf_meta_tag

    %title= page_title

  %body
    #root
      #top
        = render partial: 'shared/social_networks'
        #menu
          .bar
            = link_to image_tag('logo.png'), root_path, title: 'Doando.se', class: 'logo'
            = render partial: 'shared/nav/user'

        = render partial: 'shared/submenu'

      #content= yield

      #root_footer
        = render partial: 'shared/circles_footer'

    #footer
    = javascript_include_tag 'application'

    = render 'shared/require_gmap'
    = yield :javascript
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-36725116-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();