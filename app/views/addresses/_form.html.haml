%h2= t('views.address.title')
= f.nested_fields_for :address do |address|

  %dl.form
    %dt= address.label :number, t('label.number')
    %dd= address.text_field :number

    %dt= address.label :street, t('label.street')
    %dd= address.text_field :street

    %dt= address.label :neighborhood, t('label.neighborhood')
    %dd= address.text_field :neighborhood

    %dt= address.label :city, t('label.city')
    %dd= address.text_field :city

    %dt= address.label :zip_code, t('label.zip_code')
    %dd= address.text_field :zip_code

    %dt= address.label :state, t('label.state')
    %dd= address.text_field :state

    %dt= address.label :complement, t('label.complement')
    %dd= address.text_field :complement

    %dd= address.text_field :lat
    %dd= address.text_field :lng
    .map