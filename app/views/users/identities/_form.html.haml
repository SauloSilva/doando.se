= render 'shared/error_messages', :record => @person

%dl.form.info
  %dl.people
    %dt
    %dd.social.clearfix

    %dt
    %dd
      = f.fields_for :authentications do |auth|
        = auth.hidden_field :provider
        = auth.hidden_field :uid
        
  %dt *Email:
  %dd= f.text_field :email
  %dt= error_for @person, :email

  %dl
    %dt *Apelido:
    %dd= f.text_field :username
    %dt= error_for @person, :username

    -if @person.user.has_identity? || !@person.user.new_record?
      %dt Senha:
      %dd= f.password_field :password

      %dt Confirmação de senha:
      %dd= f.password_field :password_confirmation
      %dt= error_for @person, :password_confirmation
  
- content_for :javascript do
  = javascript_tag 
