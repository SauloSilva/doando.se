#login
  %h2= t('label.login_title')
  = render 'shared/social'
  = form_tag '/auth/identity/callback/', class: 'sign_in' do
    .form
      = label_tag 'auth_key', 'apelido ou email'
      = text_field_tag :auth_key

      = label_tag 'password', 'senha'
      = password_field_tag :password

      = submit_tag t('label.login'), class: 'button red'

      = link_to 'esqueceu sua senha?', '#', class: 'forgot_password'

- content_for :javascript do
  :javascript
    window.social = new SocialButtons()