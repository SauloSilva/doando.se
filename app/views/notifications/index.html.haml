

#notifications
  %h1 Notificacoes
  - unless @notifications.blank?
    - for notification in @notifications
      .content
        %div
          %h2= notification.title
          .counter
            #{notification.person_notifications.count} #{t('label.participant')}
          .fb_share
            = facebook_share 'Compartilhe !', notification.slug
          .twitter_share
            - twitter_like notification_url(notification.slug), "#{notification.title} !", :hash_tags => ['doarsangue', "#{notification.blood.name}"]

        #mini_map

        .action
          = participate_button(notification)
          = link_to t('buttons.show'), notification, class: 'button gray'

    = will_paginate @posts

  - else
    .empty_list= t('label.empty')