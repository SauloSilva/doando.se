#campaigns
  %h1= t('views.campaign.title')
  - unless @campaigns.blank?
    - for campaign in @campaigns

      .content_campaigns
        %h2= campaign.title

        %span.label= t('label.content')
        %span.text= campaign.content

        %span.label= t('label.quantity')
        %span.text= campaign.quantity

        %span.label= t('label.expired_at')
        %span.text= campaign.expired_at

  - else
    .empty_list= t('label.empty')


