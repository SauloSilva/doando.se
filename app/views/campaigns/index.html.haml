#campaigns
  %h1= t('views.campaign.title')
  - unless @campaigns.blank?
    %table.list
      %thead
        %tr
          %th= t('views.campaign.name')
          %th= t('views.campaign.fancyname')
          %th= t('views.campaign.logo')
          %th.actions

      %tbody
        - @campaigns.each do |campaign|
          %tr
            %td= campaign.name
            %td= campaign.fancy_name
            %td
              = link_to t('form.buttons.show'), [:admin, campaign], :class => "show"
              = link_to t('form.buttons.edit'), edit_admin_campaign_path(campaign), :class => "edit"