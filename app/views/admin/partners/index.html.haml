#partners
  %h1= t('views.partner.title')
  .actions
    = link_to t('form.buttons.new'), new_admin_partner_path, class: 'button new'

  - if @partners
    %table.list
      %thead
        %tr
          %th= t('views.partner.name')
          %th= t('views.partner.logo')
          %th.actions

      %tbody
        - @partners.each do |partner|
          %tr
            %td= partner.name
            %td= image_tag partner.logo.data.url(:thumb)
            %td
              = link_to t('form.buttons.show'), [:admin, partner], class: 'button show'
              = link_to t('form.buttons.edit'), edit_admin_partner_path(partner), class: 'button edit'

- content_for :javascript do
  :javascript
    new Tables()