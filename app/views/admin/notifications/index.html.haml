#index
  %h2= t('views.notifications.title')

  = link_to t('buttons.new'), new_admin_notification_path, class: 'button new'

  - unless @notifications.blank?
    %table.list
      %thead
        %tr
          %th= t('label.active')
          %th= t('label.quantity')
          %th= t('label.situation')
          %th= t('label.alerted_at')
          %th= t('label.action')

      %tbody
        - @notifications.each do |notification|
          %tr
            %td= notification.active
            %td= notification.quantity
            %td= notification.situation
            %td= notification.alerted_at
            %td
              = link_to t('form.buttons.show'), admin_notification_path(notification), class: 'button show'
              = link_to t('form.buttons.edit'), edit_admin_notification_path(notification), class: 'button edit'
  - else
    .empty= t('label.empty')

- content_for :javascript do
  :javascript
    new Tables()