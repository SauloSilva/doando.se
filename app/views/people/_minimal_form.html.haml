#user
  = link_to 'Twitter', '/auth/twitter', :class => 'twitter', :title => 'Twitter'
  = link_to 'Facebook', '/auth/facebook', :class => 'facebook', :title => 'Facebook'
  = link_to 'Google', '/auth/google_oauth2', :class => 'google', :title => 'Conta Google'

  = simple_form_for setup_person(@person), :html => { :multipart => true } do |f|
    .inputs
      = f.input :donor, :as => :boolean
      = f.input :name
      = f.input :surname
      = f.input :sex
      = f.input :birthday

      %h2 Contato
      = f.fields_for :contact do |contact_form|
        = render :partial => '/contacts/form', :locals => { :f => contact_form }

      %h2 Endereco
      = f.fields_for :address do |address|
        = render :partial => '/addresses/form', :locals => { :f => address }

      %h2 Usuarios
      = f.simple_fields_for :user do |user_form|
        = render :partial => '/users/identities/form', :locals => { :f => user_form }

    .actions
      = f.submit "Salvar"
      
  #user_map
  
