#user
  = simple_form_for setup_person(@person), :html => { :multipart => true } do |f|
    - if @person.errors.size > 0
      .validation
        %h2 The following errors were found:

        - for error in @person.errors.full_messages
          %ul
            %li= error

    = render "people/#{@person.current_step}_step", :f => f

    .actions
      = f.submit "continuar", :class => 'button save'
      = f.submit "back", :name => 'back_button' unless @person.first_step?
      
  #user_map
  
- content_for :javascript do
  = javascript_tag ''
